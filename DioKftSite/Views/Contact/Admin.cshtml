@model MS.WebSolutions.DioKft.Models.AdminContactModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">
        <h2>Create new contact</h2>        
        @using (Html.BeginForm("CreateContact", "Contact", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label class="col-sm-2 control-label" for="inputName">Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NewContact.Name, new { @type = "text", @class = "form-control", @id = "inputName", @placeholder = "Enter name", @style = "max-width:none !important" })
                </div>
            </div>            

            <div class="form-group">
                <label class="col-sm-2 control-label" for="inputRole">Role</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NewContact.Role, new { @type = "text", @class = "form-control", @id = "inputRole", @placeholder = "Enter role", @style = "max-width:none !important" })
                </div>
            </div>            

            <div class="form-group">
                <label class="col-sm-2 control-label" for="inputEmail">E-mail address</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.NewContact.Email, new { @type = "email", @class = "form-control", @id = "inputEmail", @placeholder = "Enter e-mail", @style = "max-width:none !important" })
                </div>
            </div>            

            <div class="form-group">
                <label class="col-sm-2 control-label" for="inputPhone">Phone Number</label>
                <div class="col-sm-9">                
                    @Html.TextBoxFor(m => m.NewContact.PhoneNumber, new { @type = "tel", @class = "form-control", @id = "inputPhone", @placeholder = "Enter Phone", @style = "max-width:none !important" })
                </div>
            </div>  

            <div class="form-group">
                <label class="col-sm-2 control-label" for="inputImage">Image</label>
                <div class="col-sm-6">                
                    @Html.TextBoxFor(m => m.NewContact.Image, new { @type = "file", @class = "file", @data_show_preview = "false", @data_show_upload="false", @data_browse_class="btn btn-primary btn-sm", @id = "inputImage", @placeholder = "Enter Image URL", @style="width:30%" })
                </div>
            </div> 

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Create New Contact</button>
                </div>
            </div>
        }   
    </div>

    <div class="row">
        <h2>Contact list</h2>
        <div class="col-xs-12 col-sm-offset-1">            
            <ul id="contactListDiv" class="list-group">
                @Html.Partial("_ContactList", Model.Contacts)
            </ul>
        </div>
    </div>
</div>