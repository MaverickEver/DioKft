@model MS.WebSolutions.DioKft.Models.ContactModel

<div id="contactId-@Model.Id">
    <span>@Model.Name</span>
    <span>@Model.Role</span>
    <span>@Model.PhoneNumber</span>
    <span>@Model.Email</span>
    <span>@Model.ImageUrl</span>

    @*@Ajax.ActionLink("Update Image", "UpdateContactImage", "Contact", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "contactListDiv" }, new { @type = "file", @class = "form-control", @id = "inputImage", @placeholder = "Enter Image URL" },);*@
    @using (Ajax.BeginForm("UpdateContactImage", "Contact", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = $"contactId-{@Model.Id}" }, new { @enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id);
        @Html.TextBoxFor(m => m.Image, new { @type = "file", @class = "form-control", @id = "inputImage", @placeholder = "Enter Image URL" })

        <button type="submit" class="btn btn-default">Update Image</button>
    }

    @using (Ajax.BeginForm("RemoveContact", "Contact", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = $"contactId-{@Model.Id}" }, new { @enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(m => m.Id);        

        <button type="submit" class="btn btn-default">Delete</button>
    }
</div>
